@import 'jeet'
@import 'client/styles/*.import'

nav
  background blackBg
  fixed top left
  height 3.2em
  width 100%
  z-index 3
  box-shadow 0 3px 3px rgba(black, .3)
  ul
    inline-list()
    center(maxSize)
    padding 1em
    display flex
    justify-content space-between
    li
      text-align center
      flex-grow 1
      a
        font-weight 100
        font-family secondFont
        color white
