// http://tympanus.net/codrops/2015/01/08/inspiration-text-input-effects/
cpInput(bgColor, textColor, brandColor)
  >span.input
    position relative
    z-index 1
    display inline-block
    max-width 400px
    width calc(100% - 2em)
    vertical-align top
    >input
      position relative
      display block
      float right
      padding .8em
      width 60%
      border none
      border-radius 0
      background bgColor
      color textColor
      font-weight bold
      -webkit-appearance none
      &:focus
        outline none
    >label
      display inline-block
      float right
      padding 0 1em
      width 40%
      color brandColor
      font-weight bold
      font-size 70.25%
      user-select none
      span
        position relative
        display block
        padding 1.6em 0
        width 100%

// Theme: Jiro
cpInputJiro(textColor, brandColor)
  >span.input
    margin-top 2em
    >input
      padding .85em .5em
      width 100%
      background transparent
      opacity 0
      transition opacity defaultTransitionValue
      color textColor
    >label
      absolute left
      padding 0 .85em
      size 100%
      text-align left
      pointer-events none
      >span
        transition transform .3s defaultTransitionValue
      &::before, &::after
        content ''
        absolute top left
        size 100%
        transition transform defaultTransitionValue, border defaultTransitionValue
      &::before
        border-top 1px solid brandColor
        transform translate3d(0, 100%, 0) translate3d(0, -2px, 0)
        transition-delay .3s
      &::after
        z-index -1
        border-radius roundCorner
        background rgba(brandColor, .1)
        transform scale3d(1, 0, 1)
        transform-origin 50% 0%
    >input:focus, >input.filled
      opacity 1
      transition-delay .3s
      +label
        >span
          transform translate3d(0, -80%, 0)
        &::before, &::after
          transition-delay 0s
        &::before
          border-color rgba(brandColor, .1)
          transform none
        &::after
          transform none
          transition-delay .3s

// Theme: Haruki
cpInputHaruki(textColor, brandColor)
  >span.input
    >input
      padding .4em .25em
      width 100%
      background transparent
      color textColor
      font-size 1.55em
    >label
      position absolute
      width 100%
      text-align left
      pointer-events none
      >span
        transition transform defaultTransitionValue
      &::before, &::after
        content ''
        position absolute
        left 0
        z-index -1
        size 100% 3px
        background brandColor
        transition transform defaultTransitionValue
      &::before
        top 0
      &::after
        bottom -1px
    >input:focus, >input.filled
      +label
        >span
          transform translate3d(0, -90%, 0)
        &::before
          transform translate3d(0, -.5em, 0)
        &::after
          transform translate3d(0, .5em, 0)

// Theme: Hoshi
cpInputHoshi(brandColor)
  >span.input
    overflow hidden
    >input
    	margin-top 1em
    	padding .85em .15em
    	width 100%
    	background transparent
    >label
      absolute bottom left
      padding 0 .25em
      size 100% calc(100% - 1em)
      text-align left
      pointer-events none
      >span
    	  position absolute
      &::before, &::after
      	content ''
      	absolute top left
      	size 100% calc(100% - 10px)
      	border-bottom 1px solid lighten((brandColor), 30%)
      &::after
      	margin-top 2px
      	border-bottom 4px solid brandColor
      	transform translate3d(-100%, 0, 0)
      	transition transform defaultTransitionValue
    >input:focus +label, >input.filled +label
      &::after
        transform none
      >span
  	    animation inputHoshi 0.3s ease-out forwards

@keyframes inputHoshi
	50%
		opacity 0
		transform translate3d(1em, 0, 0)
	51%
		opacity 0
		transform translate3d(-1em, -40%, 0)
	100%
		opacity 1
		transform translate3d(0, -40%, 0)

// Theme: Yoko
cpInputYoko(bgColor, brandColor)
  >span.input
    >input
      z-index 10
      width 100%
      background transparent
      color bgColor
      opacity 0
      transition opacity .3s
    >label
      position relative
      width 100%
      color brandColor
      text-align left
      >span
        pointer-events none
        padding .75em 0
      &::before, &::after
        content ''
        transition transform defaultTransitionValue
      &::before
        absolute bottom 100% left 0
        size 100% 4em
        background lighten(brandColor, 15%)
        transform perspective(1000px) rotate3d(1, 0, 0, 90deg)
        transform-origin 50% 100%
      &::after
        absolute top left
        size 100% .25em
        border-radius roundCorner
        background brandColor
        transform-origin 50% 0%
    >input:focus, >input.filled
      opacity 1
      transition-delay .3s
      +label
        &::before
          transform perspective(1000px) rotate3d(1, 0, 0, 0deg)
        &::after
          transform perspective(1000px) rotate3d(1, 0, 0, -90deg)
