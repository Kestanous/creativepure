// http://tympanus.net/codrops/2015/01/08/inspiration-text-input-effects/
cpInput(bgColor, textColor, brandColor)
  form
    >span.input
      position relative
      z-index 1
      display inline-block
      max-width 400px
      width calc(100% - 2em)
      vertical-align top
      >input
        position relative
        display block
        float right
        padding .8em
        width 60%
        border none
        border-radius 0
        background bgColor
        color textColor
        font-weight bold
        -webkit-appearance none
        &:focus
          outline none
      >label
        display inline-block
        float right
        padding 0 1em
        width 40%
        color brandColor
        font-weight bold
        font-size 70.25%
        user-select none
        span
          position relative
          display block
          padding 1.6em 0
          width 100%

// Theme: Jiro
cpInputJiro(defaultTransitionValue, textColor, brandColor)
  form
    >span.input
      margin-top 2em
      >input
        padding .85em .5em
        width 100%
        background transparent
        opacity 0
        transition opacity defaultTransitionValue
        color textColor
      >label
        absolute left
        padding 0 .85em
        size 100%
        text-align left
        pointer-events none
        >span
          transition transform .3s defaultTransitionValue
        &::before, &::after
          content ''
          absolute top left
          size 100%
          transition transform defaultTransitionValue, border defaultTransitionValue
        &::before
          border-top 1px solid brandColor
          transform translate3d(0, 100%, 0) translate3d(0, -2px, 0)
          transition-delay .3s
        &::after
          z-index -1
          border-radius roundCorner
          background rgba(brandColor, .1)
          transform scale3d(1, 0, 1)
          transform-origin 50% 0%
      >input:focus, >input.filled
        opacity 1
        transition-delay .3s
        +label
          >span
            transform translate3d(0, -80%, 0)
          &::before, &::after
            transition-delay 0s
          &::before
            border-color rgba(brandColor, .1)
            transform translate3d(0, 0, 0)
          &::after
            transform scale3d(1, 1, 1)
            transition-delay .3s
